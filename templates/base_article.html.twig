<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}SymfonyBlog{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous"/>
             <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/admin.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    {% if app.user %}
        <nav class="nav-connected">
            <div>
                <p class="text-light d-inline mx-3">Bienvenue, <span class="text-grey">{{ app.user.name }}</span></p>
            </div>
            <div>
                <a href="{{ path('home') }}" class="text-light mx-3">Accueil</a>
                <a href="{{ path('article_index') }}" class="text-light mx-3">Tableau de bord</a>
                <a href="{{ path('app_logout') }}" class="text-light mx-3">DÃ©connexion</a>
            </div>
        </nav>
    {% else %}
        <nav>
            <a href="{{ path('home') }}" class="text-light mx-3">Accueil</a>
            <a href="{{ path('app_login') }}" class="text-light mx-3">Connexion</a>
        </nav>
    {% endif %}
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
